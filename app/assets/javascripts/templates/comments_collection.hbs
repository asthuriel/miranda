<div class="list-item">
  <div class="list-item__left-float">
    <img class="js-user-link img-avatar img-avatar--hoverable" src="{{ user.avatar_url }}" width="42" height="42" alt="{{ user.full_name }}" />
  </div>
  <div class="list-item__header list-item__header--bordered">
    <h3 class="title-equal">
      <span class="js-user-link text--hoverable">
        {{ user.full_name }}
      </span>
      <span class="subtext">
        {{ relativeDate pubdate }}
      </span>
    </h3>
    <p>{{{ replaceReturns content }}}</p>
  </div>
</div>
